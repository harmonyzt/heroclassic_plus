public plugin_init() {
	register_plugin(PLUGIN, VERSION, AUTHOR)
	set_task(0.5,"info",0,_,_,"b")
	register_event("Damage","damage_message","b","2!0","3=0","4!0")
	sync = CreateHudSyncObj()
	
